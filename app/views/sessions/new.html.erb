<%= provide :title, "Sign in" %>

<div class="page-signin col-sm-offset-3 col-sm-6">
  <h1 class="center-block">Sign in</h1>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_tag(sessions_path, method: "post") do %>
        <div class="form-group">
          <%= label :session, :email, "Email", class: "control-label" %>
          <%= text_field :session, :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label :session, :password, "Password", class: "control-label" %>
          <%= password_field :session, :password, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Sign in", class: "btn btn-lg btn-primary" %>
        </div>
      <% end %> 
    </div>
  </div>  
  <p>New user? <%= link_to "Sign up now!", signup_path  %></p>
</div>
