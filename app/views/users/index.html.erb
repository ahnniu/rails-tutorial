<%= provide :title, 'All users' %>

<div class="col-sm-offset-3 col-sm-6">
  <h1 class="center-block">All users</h1>

  <%= will_paginate %>

  <ul class="list-unstyled">
    <% @users.each do |user| %>
      <li class="list-unstyled">
        <%= gravatar_for user, size: 52 %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  </ul>

  <%= will_paginate %>
  
</div>