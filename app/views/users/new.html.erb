<%= content_for :title, 'Sign up' %>

<div class="page-signup col-sm-offset-3 col-sm-6">
  <h1 class="center-block" >Sign up</h1>
  <div class="panel panel-default">

    <div class="panel-body signup">
      <div class="alert alert-danger" type="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        Errors
      </div>
      <%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "col-sm-3 control-lable" %>
          <div class="col-sm-9">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
        </div>
        <div class="form-group">
          <%= f.label :email, class: "col-sm-3 control-lable" %>
          <div class="col-sm-9">
            <%= f.text_field :email, class: 'form-control', type: 'email' %>
          </div>
          
        </div>
        <div class="form-group">
          <%= f.label :password, class: "col-sm-3 control-lable" %>
          <div class="col-sm-9">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirmation', class: "col-sm-3 control-lable"%>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="center-block">
            <%= f.submit 'Create my account', class: 'btn btn-large btn-primary' %>
          </div>
        </div>
      <% end %>    
    </div>
  </div>  
</div>


  